<%= render :partial => 'spree/admin/shared/sub_menu' %>

<table class="index">
  <thead>
    <tr>
      <th class="align-center">Redemption Code</th>
      <th class="align-center">Amount</th>
      <th class="align-center">Purchased by</th>
      <th class="align-center">Redeemed by</th>
      <th class="align-center">Redeemed at</th>
    </tr>
  </thead>
  <tbody>
    <% @gift_cards.each do |gift_card| %>
      <tr>
        <td class="align-center"><%= gift_card.redemption_code %></td>
        <td class="align-center"><%= gift_card.amount %></td>
        <td class="align-center"><%= "#{gift_card.purchaser.first_name} #{gift_card.purchaser.last_name}" %></td>
        <% if gift_card.redeemed? %>
          <td class="align-center"><%= "#{gift_card.redeemer.first_name} #{gift_card.redeemer.last_name}" %></td>
          <td class="align-center"><%= "#{gift_card.redeemed_at.localtime.strftime("%F %I:%M%p")}" %></td>
        <% else %>
          <td class="align-center"></td>
          <td class="align-center"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
